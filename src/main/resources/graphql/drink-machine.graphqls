schema {
    query: Query
}

type Query {
    drinks(pagination:Pagination): Drinks
}

type Drinks {
    values: [Drink]!,
    result: Result!
}

type Drink {
    name: String,
    amount: Int,
    price: Float
}

input Pagination {
    limit: Int,
    offset: Int
}

type Sort {
    asc:[String]!,
    desc:[String]!
}

type Result {
    totalCount: Int,
    count:Int,
    offset: Int
}